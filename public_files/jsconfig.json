{
	"compilerOptions": {
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"target": "ESNext",
		"jsx": "react",
		"allowImportingTsExtensions": true,
		"strictNullChecks": true,
		"strictFunctionTypes": true,

		"strict": true,
		"checkJs": true
	},
	"exclude": [
		"node_modules",
		"**/node_modules/*",
		"matter"
	]
}